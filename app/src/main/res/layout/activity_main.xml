<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/layout_jpeg"
        android:layout_height="140dp"
        android:layout_width="0dp"
        layout="@layout/layout_jpeg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:background="#fff"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_jpeg" />


    <Button
        android:id="@+id/button_scaling_bad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bad"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintEnd_toStartOf="@id/button_scaling_fit" />

    <Button
        android:id="@+id/button_scaling_fit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fit"
        app:layout_constraintStart_toEndOf="@id/button_scaling_bad"
        app:layout_constraintTop_toTopOf="@id/button_scaling_bad"
        app:layout_constraintEnd_toStartOf="@id/button_scaling_crop"/>

    <Button
        android:id="@+id/button_scaling_crop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crop"
        app:layout_constraintStart_toEndOf="@id/button_scaling_fit"
        app:layout_constraintTop_toTopOf="@id/button_scaling_bad"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="Choose scaling"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_scaling_bad"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>