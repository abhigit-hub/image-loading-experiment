<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/c1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/_1605_x_1605"
        android:src="@drawable/dummy1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/c2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image View"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/c1"
        app:layout_constraintEnd_toEndOf="@id/c1"
        app:layout_constraintTop_toBottomOf="@id/c1" />

    <ImageView
        android:id="@+id/c2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:labelFor="@string/_802_x_802"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/c3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/c1"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="TODO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glide"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/c2"
        app:layout_constraintEnd_toEndOf="@id/c2"
        app:layout_constraintTop_toBottomOf="@id/c2" />

    <ImageView
        android:id="@+id/c3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/_401_x_401"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/c2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picasso"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/c3"
        app:layout_constraintEnd_toEndOf="@id/c3"
        app:layout_constraintTop_toBottomOf="@id/c3" />

</androidx.constraintlayout.widget.ConstraintLayout>